<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_bg"
    android:orientation="vertical"
    tools:context="com.ruppin.allergentrackerbeta.InfoAndExperts">

    <Button
        android:id="@+id/infoButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:backgroundTint="#649866"
        android:text="@string/genInfo"
        android:textColor="#212121"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/ExpertsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/DisclaimerBtn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:backgroundTint="#649866"
        android:text="@string/discH"
        android:textColor="#212121"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ExpertsButton"
        tools:ignore="TextContrastCheck" />

    <Button
        android:id="@+id/ExpertsButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:backgroundTint="#649866"
        android:text="@string/Exp"
        android:textColor="#212121"
        app:layout_constraintBottom_toTopOf="@+id/DisclaimerBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoButton"
        tools:ignore="TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>