<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".Info">

    <TextView
        android:id="@+id/infoHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="monospace"
        android:includeFontPadding="true"
        android:text="@string/information"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginBottom="26dp"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/backBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/FoodAllergiesHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/general_information_on_food_allergies"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/FoodAllergiesInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/food_allergy_is_an_immune_system_reaction_that_occurs_soon_after_eating_a_certain_food_even_a_tiny_amount_of_the_allergy_causing_food_can_trigger_signs_and_symptoms_such_as_digestive_problems_hives_or_swollen_airways_in_some_people_a_food_allergy_can_cause_severe_symptoms_or_even_a_life_threatening_reaction_known_as_anaphylaxis"
                android:textColor="#2088d1" />

            <TextView
                android:id="@+id/SymptomsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/symptoms"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/SymptomsInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/for_some_people_an_allergic_reaction_to_a_particular_food_may_be_uncomfortable_but_not_severe_for_other_people_an_allergic_food_reaction_can_be_frightening_and_even_life_threatening_food_allergy_symptoms_usually_develop_within_a_few_minutes_to_2_hours_after_eating_the_offending_food_rarely_symptoms_may_be_delayed_for_several_hours"
                android:textColor="#0288D1" />

            <TextView
                android:id="@+id/SymptomCausesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/the_most_common_food_allergy_signs_and_symptoms_include"
                android:textColor="#0288D1" />

            <TextView
                android:id="@+id/bullet1text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/u2022_tingling_or_itching_in_the_mouth"
                android:textColor="#0288D1" />

            <TextView
                android:id="@+id/bullet2text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/u2022_hives_itching_or_eczema"
                android:textColor="#0288D1" />

            <TextView
                android:id="@+id/bullet3text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/u2022_swelling_of_the_lips_face_tongue_and_throat_or_other_parts_of_the_body"
                android:textColor="#0288D1" />

            <TextView
                android:id="@+id/bullet4text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/u2022_wheezing_nasal_congestion_or_trouble_breathing"
                android:textColor="#0288D1"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/bullet5text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/u2022_abdominal_pain_diarrhea_nausea_or_vomiting"
                android:textColor="#0299d1" />

            <TextView
                android:id="@+id/bullet6text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/u2022_dizziness_lightheadedness_or_fainting"
                android:textColor="#0288d1"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/WhenToSeeADoctorHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/when_to_see_a_doctor"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/DoctorHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/see_your_health_care_provider_or_allergist_if_you_have_food_allergy_symptoms_shortly_after_eating_if_possible_see_your_provider_when_the_allergic_reaction_is_occurring_this_will_help_your_provider_make_a_diagnosis"
                android:textColor="#0288d1"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/DoctorHeader2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/seek_emergency_treatment_if_you_develop_any_signs_or_symptoms_of_anaphylaxis_such_as"
                android:textColor="#0288d1"
                tools:ignore="TextContrastCheck,TextContrastCheck" />

            <TextView
                android:id="@+id/doctorbullet1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/u2022_constriction_of_airways_that_makes_it_difficult_to_breathe"
                android:textColor="#0288d1"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/doctorbullet2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/u2022_shock_with_a_severe_drop_in_blood_pressure"
                android:textColor="#2088d1"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/Doctorbullet3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/u2022_rapid_pulse_n_u2022_dizziness_or_lightheadedness"
                android:textColor="#2088d1" />

            <TextView
                android:id="@+id/PrecautionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/precautions"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/PrecautionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/once_a_food_allergy_has_already_developed_the_best_way_to_prevent_an_allergic_reaction_is_to_know_and_avoid_foods_that_cause_signs_and_symptoms_for_some_people_this_is_a_mere_inconvenience_but_others_find_it_a_greater_hardship_also_some_foods_when_used_as_ingredients_in_certain_dishes_may_be_well_hidden_this_is_especially_true_in_restaurants_and_in_other_social_settings_nif_you_know_you_have_a_food_allergy_follow_these_steps"
                android:textColor="#2088d1"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/precautionbullets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/u2022_know_what_you_re_eating_and_drinking_be_sure_to_read_food_labels_carefully_n_u2022_if_you_have_already_had_a_severe_reaction_wear_a_medical_alert_bracelet_or_necklace_that_lets_others_know_that_you_have_a_food_allergy_in_case_you_have_a_reaction_and_you_re_unable_to_communicate_n_u2022_talk_with_your_doctor_about_prescribing_emergency_epinephrine_you_may_need_to_carry_an_epinephrine_autoinjector_adrenaclick_epipen_if_you_re_at_risk_of_a_severe_allergic_reaction_n_u2022_be_careful_at_restaurants_be_certain_your_server_or_chef_is_aware_that_you_absolutely_can_t_eat_the_food_you_re_allergic_to_and_you_need_to_be_completely_certain_that_the_meal_you_order_doesn_t_contain_it_also_make_sure_food_isn_t_prepared_on_surfaces_or_in_pans_that_contained_any_of_the_food_you_re_allergic_to_n_u2022_plan_meals_and_snacks_before_leaving_home_if_necessary_take_a_cooler_packed_with_allergen_free_foods_when_you_travel_or_go_to_an_event_if_you_or_your_child_can_t_have_the_cake_or_dessert_at_a_party_bring_an_approved_special_treat_so_no_one_feels_left_out_of_the_celebration"
                android:textColor="#2088d1"
                tools:ignore="TextContrastCheck" />

            <TextView
                android:id="@+id/Credits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/information_taken_from_the_website"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/Website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/websiteclick"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/nextBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next_page" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>