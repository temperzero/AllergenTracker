<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">

        <shape android:shape="oval">
            <stroke android:width="1dp"
                android:color="#527A93"/>
            <gradient
                android:startColor ="#0076CE"
                android:centerColor ="#0076CE"
                android:endColor ="#0076CE"
                android:angle = "45"
                android:type = "linear" />
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <stroke android:width="1dp"
                android:color="#005B9F" />
            <gradient
                android:startColor = "#37459E"
                android:centerColor = "#37459E"
                android:endColor = "#37459E"
                android:angle = "45"
                android:type="linear" />
        </shape>
    </item>
</layer-list>