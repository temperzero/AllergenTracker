<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">

        <shape android:shape="oval">
            <stroke android:width="1dp"
                android:color="#0076CE"/>
            <gradient
                android:startColor ="#5CACFC"
                android:centerColor ="#5CACFC "
                android:endColor = "#63C1FC"
                android:angle = "90"
                android:type = "linear" />
        </shape>

    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <stroke android:width="1dp"
                android:color="#0076CE"/>
            <gradient
                android:startColor ="#5CACFC"
                android:centerColor ="#5CACFC "
                android:endColor ="#63C1FC"
                android:angle = "45"
                android:type = "linear" />
        </shape>
    </item>
</layer-list>