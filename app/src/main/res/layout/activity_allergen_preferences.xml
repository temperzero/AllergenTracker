<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AllergenPreferences">

    <ImageView
        android:id="@+id/settingsImg"
        android:layout_width="150dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:contentDescription="@string/login_user_logo"
        android:src="@drawable/settings"
        app:layout_constraintBottom_toTopOf="@+id/settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="151dp"
        android:layout_height="49dp"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="430dp"
        android:fontFamily="sans-serif-black"
        android:text="העדפות"
        android:textColor="@color/black"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsImg" />

    <TextView
        android:id="@+id/settingsDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="בחרו באלרגנים אליהם אתם רגישים לאופציית סינון מוצרים"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/settings"
        app:layout_constraintTop_toBottomOf="@+id/settings" />

    <ListView
        android:id="@+id/allergensListView"
        android:layout_width="409dp"
        android:layout_height="381dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingsDesc" />


</androidx.constraintlayout.widget.ConstraintLayout>